<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="tiles" namespace="/tiles" extends="tiles-default">
		<result-types>
			<result-type name="tiles" class="org.apache.struts2.views.tiles.TilesResult" default="true" />
		</result-types>
		
		<action name="welcome" class="tiles.WelcomeAction">
			<result>page.welcome</result>
		</action>
		<action name="bookList" class="tiles.BookListAction">
			<result>page.booklist</result>
		</action>
		<action name="navigation" class="tiles.NavigationAction">
			<result type="dispatcher">/jsps/tiles/common/navigation.jsp</result>
		</action>
	</package>
</struts>