<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.netpace.vzdn.model">
    <class name="VzdnEvents" table="vzdn_events" >
        <id name="eventId" type="java.lang.Integer">
            <column name="event_id" />
            <generator class="native" />
        </id>
        <property name="eventName" type="java.lang.String">
            <column name="event_name" length="50" />
        </property>
        <property name="eventDesc" type="java.lang.String">
            <column name="event_desc" length="200" />
        </property>
        <property name="createdDate" type="java.sql.Timestamp">
            <column name="created_date" length="19" />
        </property>
        <property name="createdBy" type="java.lang.String">
            <column name="created_by" length="50" />
        </property>
        <property name="lastUpdatedDate" type="java.sql.Timestamp">
            <column name="last_updated_date" length="19" />
        </property>
        <property name="lastUpdatedBy" type="java.lang.String">
            <column name="last_updated_by" length="50" />
        </property>
        <set name="handlers" inverse="true" lazy="true" cascade="save-update">
            <key>
                <column name="event_id" />
            </key>
            <one-to-many class="VzdnEventHandlers" />
        </set>
        <set name="placeHolders" table="vzdn_event_place_holders" inverse="true" cascade="save-update" lazy="true">
            <key>
                <column name="event_id" not-null="true" />
            </key>
            <many-to-many class="VzdnPlaceHolders" >
                <column name="place_holder_id" not-null="true" />
            </many-to-many>
        </set>
        <set name="notifications" lazy="true">
            <key>
                <column name="event_id" />
            </key>
            <one-to-many class="VzdnEventNotifications" />
        </set>
    </class>
</hibernate-mapping>
