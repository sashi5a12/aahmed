<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.netpace.vzdn.model">
    <class name="VzdnUsers" table="vzdn_users">
        <id name="userId" type="java.lang.Integer">
            <column name="user_id" />
            <generator class="native" />
        </id>
        <many-to-one name="userType" class="VzdnTypes" fetch="join" not-null="true" lazy="false">
            <column name="user_type_id" />
        </many-to-one>
        <many-to-one name="statusType" class="VzdnTypes" fetch="join" not-null="true" lazy="false">
            <column name="status_type_id" />
        </many-to-one>       
        <property name="userName" type="java.lang.String">
            <column name="user_name" length="100" />
        </property>
        <property name="password" type="java.lang.String">
            <column name="password" length="50" />
        </property>
        <property name="title" type="java.lang.String">
            <column name="title" length="20" />
        </property>
        <property name="lastName" type="java.lang.String">
            <column name="last_name" length="100" />
        </property>
        <property name="firstName" type="java.lang.String">
            <column name="first_name" length="100" />
        </property>
        <property name="phoneNumber" type="java.lang.String">
            <column name="phone_number" length="50" />
        </property>
        <property name="managerOrganization" type="java.lang.String">
            <column name="manager_organization" length="100" />
        </property>
        <property name="securityQuestion" type="java.lang.String">
            <column name="security_question" />
        </property>
        <property name="securityAnswer" type="java.lang.String">
            <column name="security_answer" />
        </property>
        <property name="createdBy" type="java.lang.String">
            <column name="created_by" length="100" />
        </property>
        <property name="createdDate" type="java.sql.Timestamp">
            <column name="created_date" length="19" />
        </property>
        <property name="lastUpdatedBy" type="java.lang.String">
            <column name="last_updated_by" length="100" />
        </property>
        <property name="lastUpdatedDate" type="java.sql.Timestamp">
            <column name="last_updated_date" length="19" />
        </property>
        <property name="faxNumber" type="java.lang.String">
            <column name="fax_number" length="50" />
        </property>
        <property name="mobileNumber" type="java.lang.String">
            <column name="mobile_number" length="50" />
        </property>
        <property name="newsletterOptOut" type="java.lang.String">
            <column name="newsletter_opt_out" length="1" />
        </property>
        
         <property name="pageSize" type="java.lang.Integer">
            <column name="page_size"/>
        </property>
        
	    <property name="gtmCompanyId" type="java.lang.String">
            <column name="GTM_COMP_ID" length="500" />
        </property>
	
	    <property name="country" type="java.lang.String">
            <column name="COUNTRY" length="500" />
        </property>
	
        
        <set name="roles" table="vzdn_user_roles" lazy="false" inverse="false"  cascade="none">

            <key>
                <column name="user_id" not-null="true" />
            </key>
            <many-to-many column="role_id"  class="VzdnSysRoles" />
        </set>
        
        <!--  
        
        <set name="notifications" table="vzdn_notif_opt_out_recipients" lazy="false" inverse="false"  cascade="none">

            <key>
                <column name="user_id" not-null="true" />
            </key>
            <many-to-many column="notification_id"  class="VzdnEventNotifications" />
        </set>
        
        -->
               
          <set name="notifications" table="vzdn_notif_opt_out_recipients" lazy="true">
            <key>
                <column name="user_id" not-null="true" />
            </key>
            <many-to-many class="VzdnEventNotifications">
                <column name="notification_id" not-null="true" />
            </many-to-many>
        </set>        
        
    </class>
</hibernate-mapping>
