<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.netpace.vzdn.model">
    <class name="VzdnEventNotifications" table="vzdn_event_notifications">
        <id name="notificationId" type="java.lang.Integer">
            <column name="notification_id" />
            <generator class="native" />
        </id>
        <many-to-one name="message" class="VzdnEmailMessages" fetch="join" not-null="true" lazy="false">
            <column name="message_id" />
        </many-to-one>
        <many-to-one name="event" class="VzdnEvents" fetch="join" not-null="true" lazy="false">
            <column name="event_id" />
        </many-to-one>
        <property name="notificationTitle" type="java.lang.String">
            <column name="notification_title" length="100" />
        </property>
        <property name="media" type="java.lang.String">
            <column name="media" length="20" />
        </property>
        <property name="status" type="java.lang.String">
            <column name="status" length="20" />
        </property>
        <property name="fromAddress" type="java.lang.String">
            <column name="from_address" length="100" />
        </property>
       
       
        <set name="adHocRecipients" cascade="save-update" lazy="true">
            <key>
                <column name="notification_id" />
            </key>
            <one-to-many class="VzdnNotifAdHocRecipients" />
        </set>
       
       
        <set name="optOutRecipients" table="vzdn_notif_opt_out_recipients" cascade="save-update" lazy="true">
            <key>
                <column name="notification_id" not-null="true" />
            </key>
            <many-to-many class="VzdnUsers">
                <column name="user_id" not-null="true" />
            </many-to-many>
        </set>
       
        <set name="roles" table="vzdn_notification_roles" cascade="save-update" lazy="true">
            <key>
                <column name="notification_id" not-null="true" />
            </key>
            <many-to-many class="VzdnSysRoles">
                <column name="role_id" not-null="true" />
            </many-to-many>
        </set>
    </class>
</hibernate-mapping>
