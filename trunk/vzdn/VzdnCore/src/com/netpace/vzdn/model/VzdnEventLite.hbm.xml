<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
    
<hibernate-mapping package="com.netpace.vzdn.model">

<!-- 
    Created by Middlegen Hibernate plugin

    http://boss.bekk.no/boss/middlegen/
    http://hibernate.sourceforge.net/
-->

<class 
    name="VzdnEventLite" 
    table="vzdn_events"
>
    <meta attribute="extends">com.netpace.vzdn.model.BaseEvent</meta>
    <id
        name="eventId"
        type="java.lang.Long"
        column="EVENT_ID"
    >
       <generator class="assigned" />
    </id>

	

    <property
        name="eventName"
        type="java.lang.String"
        column="EVENT_NAME"
        update="false"
        insert="false"
        length="50"
    >
        <meta attribute="use-in-tostring">true</meta>
    </property>
    <property
        name="eventDesc"
        type="java.lang.String"
        column="EVENT_DESC"
        length="20"
    />
    <property
        name="createdDate"
        type="java.sql.Timestamp"
        column="CREATED_DATE"
        length="7"
    />
    <property
        name="createdBy"
        type="java.lang.String"
        column="CREATED_BY"
        length="50"
    />
    <property
        name="lastUpdatedDate"
        type="java.sql.Timestamp"
        column="LAST_UPDATED_DATE"
        length="7"
    />
    <property
        name="lastUpdatedBy"
        type="java.lang.String"
        column="LAST_UPDATED_BY"
        length="50"
    />

	<set name="eventPlaceHolders" table="vzdn_event_place_holders" lazy="false">
        <key>
            <column name="event_id" not-null="true"/>
        </key>
        <many-to-many class="com.netpace.vzdn.model.VzdnPlaceHolders">
			<column name="place_holder_id" not-null="true"/>
        </many-to-many>        
    </set>

    <!-- bi-directional one-to-many association to VzdnEventHandler -->
    <set name="eventHandlers">
        <key>
            <column name="event_id" />
        </key>
        <one-to-many 
            class="com.netpace.vzdn.model.VzdnEventHandlers"
        />
    </set>

</class>
</hibernate-mapping>
