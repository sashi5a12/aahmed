<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.netpace.vzdn.model">
    <class name="VzdnDevCareIssues" table="vzdn_dev_care_issues">
        <id name="issueId" type="java.lang.Integer">
            <column name="issue_id" />
            <generator class="native" />
        </id>
        <many-to-one name="category" class="VzdnDevCareCategories" fetch="join">
            <column name="category_id" />
        </many-to-one>
        <many-to-one name="subCategory" class="VzdnDevCareSubCategories" fetch="join">
            <column name="sub_category_id" />
        </many-to-one>
        <many-to-one name="vzdnTypes" class="VzdnTypes" fetch="join" not-null="true">
            <column name="type_id" />
        </many-to-one>
        <property name="title" type="java.lang.String">
            <column name="title" length="50" />
        </property>
        <property name="description" type="java.lang.String">
            <column name="description" length="500" />
        </property>
        <property name="ticketId" type="java.lang.String">
            <column name="ticket_id" length="200" not-null="true" />
        </property>
        <property name="userId" type="java.lang.Integer">
            <column name="user_id" />
        </property>
        <property name="attachment" type="java.lang.String">
            <column name="attachment" />
        </property>
        <property name="attachmentName" type="java.lang.String">
            <column name="attachment_name" length="500" />
        </property>
        <property name="createdBy" type="java.lang.Integer">
            <column name="created_by" />
        </property>
        <property name="createdDate" type="java.sql.Timestamp">
            <column name="created_date" length="19" />
        </property>
        <property name="updatedBy" type="java.lang.Integer">
            <column name="updated_by" />
        </property>
        <property name="updatedDate" type="java.sql.Timestamp">
            <column name="updated_date" length="19" />
        </property>
        <property name="attachmentType" type="java.lang.String">
            <column name="attachment_type" length="20" />
        </property>
        <set name="lifeCycles" inverse="true" lazy="true" cascade="save-update">
            <key>
                <column name="issue_id" />
            </key>
            <one-to-many class="VzdnDevCareLifeCycle" />
        </set>
    </class>
</hibernate-mapping>
