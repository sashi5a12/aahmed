<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.netpace.vzdn.model">
    <class name="VzdnNotifAdHocRecipients" table="vzdn_notif_ad_hoc_recipients">
    	<id name="adHocId" type="java.lang.Integer" column="ad_hoc_id">
    		<generator class="native" />
		</id>
		
		
	 <many-to-one name="notification" class="VzdnEventNotifications" fetch="join" not-null="true">
            <column name="notification_id" />
        </many-to-one>	

	<!--   
		<property name="notificationId" type="java.lang.Integer" column="notification_id"></property>
	-->
	<property name="emailAddress" type="java.lang.String" column="email_address" length="100" />        
    </class>
</hibernate-mapping>
