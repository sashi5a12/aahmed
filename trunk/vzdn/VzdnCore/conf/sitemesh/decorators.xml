<decorators defaultdir="/decorators">
    <decorator name="default" page="main.jsp">
        <pattern>/*</pattern>
    </decorator>
    <excludes>
        <pattern>/includes/header.jsp*</pattern>
        <pattern>/includes/footer.jsp*</pattern>
        <pattern>/loggedin/logged-in-header.jsp*</pattern>
        <pattern>/commons/logout.jsp</pattern>   
        <pattern>/errorpages/VZDNexceptionHandling.jsp</pattern>     
		<pattern>/errorpages/403.jsp</pattern>     
		<pattern>/errorpages/404.jsp</pattern>     
		<pattern>/errorpages/500.jsp</pattern>     
		<pattern>/loadrolereport.action</pattern>
		<pattern>/verizon/reports/admin/loadrolereport.action</pattern>
		<pattern>/verizon/reports/admin/loaduserreport.action</pattern>
		<pattern>/verizon/reports/admin/loaddeveloperreport.action</pattern>
    </excludes>
</decorators>