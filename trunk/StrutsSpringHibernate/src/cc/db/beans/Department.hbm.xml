<?xml version="1.0"?> 
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="cc.db.beans">
  <class name="Department" table="DEPARTMENTS" schema="EARTHLINGS">
    <id name="id" type="integer">
      <generator class="identity" />
    </id>
    <property name="name"/>
    <many-to-one name="location" class="Location" column="LOCATION_ID" fetch="join"/>
    <many-to-one name="manager" class="Employee" fetch="join"
      column="MANAGER" update="true"
    />
    <set name="employees">
      <key>
        <column name="DEPARTMENT_ID" not-null="true"/>
      </key>
      <one-to-many class="Employee"/>
    </set>
  </class>
</hibernate-mapping>
