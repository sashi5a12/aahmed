<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="execAndWait" namespace="/execAndWait"	extends="struts-default">
		<interceptors>
			<interceptor-stack name="waitStack">
				<interceptor-ref name="defaultStack"></interceptor-ref>
				<interceptor-ref name="execAndWait"></interceptor-ref>
			</interceptor-stack>
		</interceptors>
		<action name="Show"  class="execAndWait.ExecAndWaitAction">
			<interceptor-ref name="waitStack"></interceptor-ref>
			<result>/jsps/execAndWait/Show.jsp</result>
			<result name="wait">/jsps/execAndWait/Wait.jsp</result>
		</action>
	</package>
</struts>