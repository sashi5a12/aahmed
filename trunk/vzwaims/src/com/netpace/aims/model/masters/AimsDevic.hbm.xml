<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd" >
    
<hibernate-mapping>

<!-- 
    Created by Middlegen Hibernate plugin

    http://boss.bekk.no/boss/middlegen/
    http://hibernate.sourceforge.net/
-->

<class 
    name="com.netpace.aims.model.masters.AimsDevic" 
    table="AIMS_DEVICES"
>
<meta attribute="extends">com.netpace.aims.model.BaseValueObject</meta>
    <id
        name="deviceId"
        type="java.lang.Long"
        column="DEVICE_ID"
    >
		<generator class="sequence">
			<param name="sequence">SEQ_PK_DEVICES</param>
		</generator>
    </id>
    <property
        name="deviceModel"
        type="java.lang.String"
        column="DEVICE_MODEL"
        not-null="true"
        length="100"
    />
    <property
        name="status"
        type="java.lang.String"
        column="STATUS"
        length="50"
    />
    <property
        name="deviceMfgBy"
        type="java.lang.String"
        column="DEVICE_MFG_BY"
        length="200"
    />
    <property
        name="mfgWebSiteUrl"
        type="java.lang.String"
        column="MFG_WEB_SITE_URL"
        length="100"
    />
    <property
        name="createdBy"
        type="java.lang.String"
        column="CREATED_BY"
        length="50"
    />
    <property
        name="createdDate"
        type="java.sql.Timestamp"
        column="CREATED_DATE"
        length="7"
    />
    <property
        name="lastUpdatedBy"
        type="java.lang.String"
        column="LAST_UPDATED_BY"
        length="50"
    />
    <property
        name="lastUpdatedDate"
        type="java.sql.Timestamp"
        column="LAST_UPDATED_DATE"
        length="7"
    />
	<property
        name="markAs"
        type="java.lang.String"
        column="MARK_AS"
        length="1"
    />
	<property
        name="deviceAlert"
        type="java.lang.String"
        column="DEVICE_ALERT"
        length="1"
    />
	<property
        name="deviceAlertMessage"
        type="java.lang.String"
        column="DEVICE_ALERT_MESSAGE"
        length="100"
    />
    <property
        name="lbsSupported"
        type="java.lang.String"
        column="LBS_SUPPORTED"
        length="1"
    />

    <property
        name="assetType"
        type="java.lang.Long"
        column="ASSET_TYPE"
        length="22"
    />
    <property
        name="mportalDeviceName"
        type="java.lang.String"
        column="MPORTAL_DEVICE_NAME"
        length="100"
    />

    <!-- associations -->
    <!-- bi-directional one-to-many association to AimsBrewAppsDevic -->
	<!--
    <set
        name="aimsBrewAppsDevics"
        lazy="true"
        inverse="true"
    >
        <key>
            <column name="DEVICE_ID" />
        </key>
        <one-to-many 
            class="com.netpace.aims.model.AimsBrewAppsDevic"
        />
    </set>
	-->
    <!-- many-to-many association to AimsPlatform -->	

	<set name="platform" table="AIMS_DEVICE_PLATFORMS">
		<key>
			<column name="DEVICE_ID" not-null="true"/>
		</key>
		<many-to-many class="com.netpace.aims.model.core.AimsPlatform">
			<column name="PLATFORM_ID" not-null="true"/>
		</many-to-many>
	</set>	
	
	<set name="aimsDevicePids" inverse="true">
		<key>
        	<column name="DEVICE_ID" not-null="true" />
        </key>
        <one-to-many class="com.netpace.aims.model.masters.AimsDevicePid" />
    </set>	
</class>
</hibernate-mapping>
