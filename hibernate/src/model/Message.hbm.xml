<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd"
[<!ENTITY datemodified SYSTEM "classpath://model/DateModified.hbm.xml">]>

<hibernate-mapping>
    <class name="model.Message" table="message">
        <id name="id" type="java.lang.Integer">
            <column name="id" />
            <generator class="native" />
        </id>
        <many-to-one class="model.Message" name="nextMessage" cascade="all" column="nextMessage"/> 
        <property name="text" type="java.lang.String">
            <column name="text" length="255"/>
        </property>
        &datemodified;
        <!--<set name="messages" inverse="true">
            <key>
                <column name="id" not-null="true" unique="true" />
            </key>
            <one-to-many class="model.Message" />
        </set>-->
    </class>
</hibernate-mapping>
