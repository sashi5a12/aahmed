<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

	<session-factory>
		<property name="connection.username">auction</property>
		<property name="connection.url">jdbc:mysql://localhost:3306/auction</property>
		<property name="dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="myeclipse.connection.profile">auction</property>
		<property name="connection.password">auction</property>
		<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="format_sql">true</property>

		<!--
			<property
			name="hibernate.connection.provider_class">conf.DBCPConnectionProvider</property>
			<property name="hibernate.dbcp.maxActive">1</property> <property
			name="hibernate.dbcp.maxIdle">1</property> <property
			name="hibernate.dbcp.maxWait">100</property> <property
			name="hibernate.dbcp.whenExhaustedAction">1</property> <property
			name="hibernate.dbcp.testOnBorrow">true</property> <property
			name="hibernate.dbcp.testOnReturn">true</property>
		-->
		<property name="use_identifier_rollback">true</property>
		<property name="jdbc.batch_size">100</property>
		<property name="max_fetch_depth">4</property>
		<property name="cache.provider_class">org.hibernate.cache.EhCacheProvider</property>
		<property name="cache.use_second_level_cache">true</property>
		<property name="transaction.factory_class">org.hibernate.transaction.JDBCTransactionFactory</property>

		<mapping resource="model/Message.hbm.xml" />
		<mapping resource="model/Category.hbm.xml" />
		<mapping resource="model/UnionBillingDetails.hbm.xml" />
		<mapping resource="model/SubClassBillingDetails.hbm.xml" />
		<mapping resource="model/JoinedBillingDetails.hbm.xml" />
		<mapping resource="model/ValueTypeSetItem.hbm.xml" />
		<mapping resource="model/ValueTypeBagItem.hbm.xml" />
		<mapping resource="model/ValueTypeListItem.hbm.xml" />
		<mapping resource="model/ValueTypeMapItem.hbm.xml" />
		<mapping resource="model/ValueTypeClistItem.hbm.xml" />
		<mapping resource="model/BillingDetails.hbm.xml" />
		<mapping resource="model/Users.hbm.xml" />
		<mapping resource="model/Address.hbm.xml" />
		<mapping resource="model/OtoFkaUsers.hbm.xml"/>
		<mapping resource="model/OtoFkaAddress.hbm.xml"/>
		<mapping resource="model/OtoJtaShipment.hbm.xml"/>
		<mapping resource="model/OtoJtaItem.hbm.xml"/>
		<mapping resource="model/Item.hbm.xml" />
		<mapping resource="model/Bid.hbm.xml" />
		<mapping resource="model/CategorizedItem.hbm.xml" />
		<mapping resource="model/Country.hbm.xml" />
		<mapping resource="model/Employee.hbm.xml" />
		<mapping resource="model/Language.hbm.xml" />
		<mapping resource="model/Airport.hbm.xml" />

	</session-factory>

</hibernate-configuration>