<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd" >
    
<hibernate-mapping>

<!-- 
    Created by Middlegen Hibernate plugin

    http://boss.bekk.no/boss/middlegen/
    http://hibernate.sourceforge.net/
-->

<class 
    name="com.netpace.aims.model.security.AimsSysRole" 
    table="AIMS_SYS_ROLES"
    dynamic-update="true"
>
    <meta attribute="class-description">
       Aims System Role
    </meta>
    <meta attribute="extends">com.netpace.aims.model.BaseValueObject</meta>
    <id
        name="roleId"
        type="java.lang.Long"
        column="ROLE_ID"
    >
        <generator class="sequence">
             <param name="sequence">SEQ_PK_SYS_ROLES</param>
        </generator>
    </id>
    <property
        name="roleName"
        type="java.lang.String"
        column="ROLE_NAME"
        not-null="true"
        length="50"
    >
        <meta attribute="use-in-tostring">true</meta>
    </property>
    <property
        name="roleDescription"
        type="java.lang.String"
        column="ROLE_DESCRIPTION"
        length="500"
    />
    <property
        name="roleType"
        type="java.lang.String"
        column="ROLE_TYPE"
        not-null="true"
        length="10"
    />
    <property
        name="createdBy"
        type="java.lang.String"
        column="CREATED_BY"
        length="50"
    />
    <property
        name="createdDate"
        type="java.sql.Timestamp"
        column="CREATED_DATE"
        length="7"
    />
    <property
        name="lastUpdatedBy"
        type="java.lang.String"
        column="LAST_UPDATED_BY"
        length="50"
    />
    <property
        name="lastUpdatedDate"
        type="java.sql.Timestamp"
        column="LAST_UPDATED_DATE"
        length="7"
    />
	
	<property
        name="vzdnMappingRoleID"
        type="java.lang.Long"
        column="VZDN_MAPPING_ROLE_ID"
    />

    <!-- associations -->
    
    <!-- bi-directional one-to-many association to AimsRolePrivilege -->
    <set name="rolePrivileges" table="AIMS_ROLE_PRIVILEGES" order-by="PRIVILEGE_ID asc">
        <key>
         <column name="ROLE_ID" not-null="true"/>
        </key>
        <one-to-many class="com.netpace.aims.model.security.AimsRolePrivilege"/>
    </set>    

    <!-- bi-directional one-to-many association to AimsUserRol -->
    <!--
    <set name="aimsUserRoles" lazy="true" inverse="true">
        <key>
            <column name="ROLE_ID" />
        </key>
        <one-to-many class="com.netpace.aims.model.security.AimsUserRole"/>
    </set>
    -->

</class>
</hibernate-mapping>
