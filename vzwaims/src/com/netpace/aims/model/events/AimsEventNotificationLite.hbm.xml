<class 
    name="com.netpace.aims.model.events.AimsEventNotificationLite" 
    table="AIMS_EVENT_NOTIFICATIONS"
>
<meta attribute="extends">com.netpace.aims.model.BaseValueObject</meta>
    <id
        name="notificationId"
        type="java.lang.Long"
        column="NOTIFICATION_ID"
    >
        <generator class="sequence">
			<param name="sequence">SEQ_PK_EVENT_NOTIFICATIONS</param>
		</generator>
    </id>

    <property
        name="notificationTitle"
        type="java.lang.String"
        column="NOTIFICATION_TITLE"
        length="50"
    >
		<meta attribute="use-in-tostring">true</meta>
	</property>

    <property
        name="media"
        type="java.lang.String"
        column="MEDIA"
        length="20"
    />
    <property
        name="status"
        type="java.lang.String"
        column="STATUS"
        length="20"
    />
    <property
        name="fromAddress"
        type="java.lang.String"
        column="FROM_ADDRESS"
        length="50"
    />
	<property
        name="includeVzwAccountManager"
        type="java.lang.String"
        column="INCLUDE_VZW_ACCOUNT_MANAGER"
        length="1"
    />
	<property
        name="includeVzwAppsContact"
        type="java.lang.String"
        column="INCLUDE_VZW_APPS_CONTACT"
        length="1"
    />
	
	<!--many-to-one association CHANGED to properties-->
	<property name="eventId" type="java.lang.Long" column="EVENT_ID" length="22"    />
	<property name="messageId" type="java.lang.Long" column="MESSAGE_ID" length="22"    />

    <!-- associations -->
    <!-- bi-directional many-to-one association to AimsEvent -->
    <!--many-to-one
        name="aimsEvent"
        class="com.netpace.aims.model.events.AimsEvent"
        not-null="true"
    >
        <column name="EVENT_ID" />
    </many-to-one -->   
    <!-- bi-directional many-to-one association to AimsEventMessage -->
    <!--many-to-one
        name="aimsEventMessage"
        class="com.netpace.aims.model.events.AimsEventMessage"
        not-null="true"
    >
        <column name="MESSAGE_ID" />
    </many-to-one-->   
    <!-- bi-directional one-to-many association to AimsNotificationRole -->
    <set name="notificationRoles">
        <key>
            <column name="NOTIFICATION_ID" />
        </key>
        <one-to-many 
            class="com.netpace.aims.model.events.AimsNotificationRole"
        />
    </set>

    <!-- bi-directional one-to-many association to AimsNotificationRecipient -->
    <set name="notifAdHocRecipients">
        <key>
            <column name="NOTIFICATION_ID" />
        </key>
        <one-to-many 
            class="com.netpace.aims.model.events.AimsNotifAdHocRecipient"
        />
    </set>

</class>
</hibernate-mapping>
