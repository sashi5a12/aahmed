<?xml version="1.0" encoding="UTF-8"?>
<project default="run">
	<target name="compile">
		<javac srcdir="./../src/test/ant"/>
	</target>
	
	<target name="jar" depends="compile">
		<jar	destfile="hello.jar"
				basedir="./../src"
				includes="**/*.class"
		/>
	</target>
	
	<target name="run" depends="jar">
		<java	classname="test.ant.HelloWorld"
				classpath="hello.jar"
				fork="true"
		/>
	</target>
</project>