<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC 
	"-//Apache Software Foundation//DTD Struts Configuration 1.3//EN" 
	"http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>
   <global-forwards >
      <forward name="welcome" path="/welcome.do" redirect="true" />
   </global-forwards>

   <action-mappings >
      <action path="/welcome" type="action.WelcomeAction">
         <forward name="showWelcome" path="page.welcome" />
      </action>
      <action path="/bookList" type="action.BookListAction">
         <forward name="showBookList" path="page.booklist" />
      </action>
      <action path="/navigation" type="action.NavigationAction">
         <forward name="showNavigation" path="/jsp/common/navigation.jsp" />
      </action>
   </action-mappings>

	<message-resources parameter="ApplicationResources" />

	<plug-in className="org.apache.struts.tiles.TilesPlugin">
		<set-property property="definitions-config" value="/WEB-INF/tiles-defs.xml" />
		<set-property property="moduleAware" value="true" />
		<set-property property="definitions-parser-validate" value="true" />
	</plug-in>

</struts-config>

